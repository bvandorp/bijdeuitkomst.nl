---
import SelectPersons from '../components/select_persons.astro'
import InputPlayer from "../components/input_player.astro"
---

<form class="w-full" action="#" method="post" netlify>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-white-700 text-l font-bold mb-2" for="grid-first-name">
        Jouw naam
      </label>
      <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="text" placeholder="Naam">
    </div>
    <div class="w-full md:w-1/2 px-3">
      <label class="block uppercase tracking-wide text-white-700 text-l font-bold mb-2" for="grid-last-name">
        Jouw e-mailadres
      </label>
      <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name" type="email" placeholder="jouw@emailadres.nl">
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-1/2 px-3">
        Wil je mensen aanmelden voor het spel?
        <div class="flex items-center mt-4">
            <input checked id="meedoen_spel" type="radio" value="" name="meedoen_spel" class="w-4 h-4 text-white">
            <label for="meedoen_spel" class="ms-2 text-sm font-medium mr-5">Nee</label>

            <input id="meedoen_spel" type="radio" value="" name="meedoen_spel" class="w-4 h-4 text-white">
            <label for="meedoen_spel" class="ms-2 text-sm font-medium mr-5">Ja</label>
        </div>
    </div>
    <div class="w-1/2 px-3">
        Wil je je aanmelden voor de BBQ
        <div class="flex items-center mt-4">
            <input checked id="meedoen_bbq" type="radio" value="" name="meedoen_bbq" class="w-4 h-4 text-white">
            <label for="meedoen_bbq" class="ms-2 text-sm font-medium mr-5">Nee</label>

            <input id="meedoen_bbq" type="radio" value="" name="meedoen_bbq" class="w-4 h-4 text-white">
            <label for="meedoen_bbq" class="ms-2 text-sm font-medium mr-5">Ja</label>
        </div>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-3/4 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-white-700 text-l font-bold mb-2" for="grid-first-name">
        Voornaam speler
      </label>
    </div>
    <div class="w-1/4 px-3">
      <label class="block uppercase tracking-wide text-white-700 text-l font-bold mb-2" for="grid-last-name">
        Leeftijd
      </label>  
    </div>
    
    <InputPlayer name_input="player_1" age_input="age_1"/>
    <InputPlayer name_input="player_2" age_input="age_2"/>
    <InputPlayer name_input="player_3" age_input="age_3"/>
    <InputPlayer name_input="player_4" age_input="age_4"/>
    <InputPlayer name_input="player_5" age_input="age_5"/>
    <InputPlayer name_input="player_6" age_input="age_6"/>
    
    
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-1/3 px-3 flex flex-wrap justify-center">
        BBQ vlees
        <SelectPersons name="bbq_vlees"/>
    </div>
    <div class="w-1/3 px-3 flex flex-wrap justify-center">
        BBQ vega
        <SelectPersons name="bbe_vega"/>
    </div>
    <div class="w-1/3 px-3 flex flex-wrap justify-center">
        Kindermenu
        <SelectPersons name="kindermenu"/>
    </div>
  </div>
  <div class="flex flex-wrap justify-center -mx-3 mb-6">
    <input class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit" name="submit" value="Aanmelden">
  </div>


   
  
</form>

